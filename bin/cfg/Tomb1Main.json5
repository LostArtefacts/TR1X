{
    // Sets Lara's health value for the beginning of each level (max is 1000).
    "start_lara_hitpoints": 1000,

    // Stops Lara from healing between level reloads (for No Heal challenge runs).
    "disable_healing_between_levels": false,

    // Removes all medipacks from the game (for No Meds challenge runs).
    "disable_medpacks": false,

    // Removes all magnum guns and magnum ammo pickups from the game.
    "disable_magnums": false,

    // Removes all Uzi guns and Uzi ammo pickups from the game.
    "disable_uzis": false,

    // Removes all shotgun and shotgun shell pickups from the game.
    "disable_shotgun": false,

    // Enables showing a deaths counter in the compass and in the level statistics.
    // Death count is updated in the currently loaded save as soon as Lara dies.
    "enable_deaths_counter": true,

    // Enables showing healthbar for the active enemy.
    "enable_enemy_healthbar": true,

    // Allows Lara to look while running, jumping etc. - similar to TR2 style.
    "enable_enhanced_look": true,

    // Draws flames when firing the shotgun, like for other guns.
    "enable_shotgun_flash": true,

    // Makes the shotgun no longer fire when a locked target moves out of Lara's sight, similar to other guns.
    "fix_shotgun_targeting": true,

    // Enables quick weapon draws and medipack usage.
    // - 1: Draw pistols
    // - 2: Draw shotgun
    // - 3: Draw magnums
    // - 4: Draw Uzis
    // - 8: Use small medipack
    // - 9: Use large medipack
    "enable_numeric_keys": true,

    // Enables TR3+ style sidesteps, e.g. shift+directional arrows. Dedicated
    // sidestep buttons will still work.
    "enable_tr3_sidesteps": true,

    // Enables various cheats:
    // - F11: hold to heal Lara.
    // - F11 + WALK key: hold to hurt Lara.
    // - L: immediately end the level.
    // - I: give Lara all weapons; a boost of ammo and medipacks; and all plot
    //   items for the current level.
    // - O: enable DOZY cheat (swimming midair).
    //      - WALK key: exit DOZY.
    //      - GUN key: open the closest door (doesn't work in certain places).
    "enable_cheats": false,

    // Enables Lara's braid. This currently works only in the Lost Valley level.
    "enable_braid": false,

    // Enables showing the maximum pickup count and kill count on each level.
    // This includes unobtainable items.
    "enable_detailed_stats": true,

    // Enables showing level statistics when the compass is selected.
    "enable_compass_stats": true,

    // Enables a total game statistics screen that plays after the credits.
    "enable_total_stats": true,

    // Makes the in-game timer work even while the game is showing the
    // inventory.
    "enable_timer_in_inventory": true,

    // Makes the healthbar and airbar use smooth color transitions.
    "enable_smooth_bars": true,

    // Makes the inventory and pause screen use fade transitions for
    // the semitransparent backdrop, similar to PS1.
    "enable_fade_effects": true,

    // Changes how menus are displayed. Possible values:
    // - pc: UI style matches the PC version.
    // - ps1: UI style matches the PS1 version.
    "menu_style": "pc",

    // Changes how the healthbar is displayed. Possible values:
    // - default: show the healthbar at the start of a level, after getting
    //   hit, or while having weapons equipped; flash the healthbar if it's already
    //   on screen when Lara's health is 20% or below (TombATI).
    // - flashing-or-default: constantly flash the healthbar when Lara's
    //   health is 20% or below, or show under default circumstances.
    // - flashing-only: show the healthbar *only* when Lara's health is 20% or
    //   below (for challenge runs).
    // - always: always show the healthbar.
    // - never: never display the healthbar (for challenge runs).
    // - ps1: show the healthbar under default circumstances with no flashing.
    "healthbar_showing_mode": "flashing-or-default",

    // Location where the healthbar is displayed. Possible values:
    // - top-left
    // - top-center
    // - top-right
    // - bottom-left
    // - bottom-center
    // - bottom-right
    "healthbar_location": "top-left",

    // Color of the healthbar. Possible values:
    // - gold (game default)
    // - red
    // - grey
    // - blue
    // - silver
    // - green
    // - gold2
    // - blue2
    // - pink
    "healthbar_color": "red",

    // Changes how the airbar is displayed. Possible values:
    // - default: show the airbar only in the water and flash the airbar when
    //   Lara's oxygen is 20% or below (TombATI).
    // - flashing-only: show the airbar *only* when Lara's oxygen is 20% or
    //   below (for challenge runs).
    // - never: never display the airbar (for challenge runs).
    // - ps1: show the airbar under default circumstances with no flashing.
    "airbar_showing_mode": "default",

    // Location where the airbar is displayed.
    "airbar_location": "top-right",

    // Color of the airbar.
    "airbar_color": "blue",

    // Location where the enemy healthbar is displayed.
    "enemy_healthbar_location": "bottom-left",

    // Color of the enemy healthbar.
    "enemy_healthbar_color": "grey",

    // Prevents the secret sound from incorrectly playing when using the golden
    // key in Tomb of Tihocan.
    "fix_tihocan_secret_sound": true,

    // Fixes the secret trigger in the final level not working.
    "fix_pyramid_secret_trigger": true,

    // Fixes the sound of collecting a secret resetting the active music track.
    "fix_secrets_killing_music": true,

    // Fixes sidestepping and walking backwards on breakable tiles
    // causing Lara to immediately descend to the tile underneath.
    "fix_descending_glitch": false,

    // Fixes Lara jumping through objects and moving up certain slopes.
    "fix_wall_jump_glitch": false,

    // Fixes Lara not being able to grab parts of some bridges and invisible walls at the edge.
    "fix_bridge_collision": true,

    // Fixes Lara jumping on small steps sometimes resulting in a weird running
    // animation, known as a QWOP state.
    "fix_qwop_glitch": false,

    // Fixes alligators dealing no damage if Lara remains still in the water.
    "fix_alligator_ai": true,

    // Makes a freshly triggered (runaway) Pierre replace an already existing (runaway) Pierre.
    "change_pierre_spawn": true,

    // The desired field of view in degrees, which overrides the hardcoded
    // default. The default values are 80 (horizontal) and 65 (vertical).
    "fov_value": 65,

    // Interprets fov_value as vertical instead of horizontal field of view.
    // May be advantageous for widescreen resolutions, especially for
    // multi-screen setups, since it distorts the left and right side instead
    // of cropping away the top and bottom part of the screen.
    "fov_vertical": true,

    // Enables demos showing in the main menu.
    "enable_demo": true,

    // Enables FMVs playing.
    "enable_fmv": true,

    // Enables cutscenes playing.
    "enable_cine": true,

    // Plays music in the main menu.
    "enable_music_in_menu": true,

    // Allows game sounds to continue to play in the inventory screen.
    "enable_music_in_inventory": true,

    // Removes all collision with T-Rex upon death.
    // This helps when the T-Rex's body blocks the passage out.
    "disable_trex_collision": false,

    // Overrides game resolution. Leave at 0 or negative values to
    // automatically guess from the screen size. Note: these values
    // only override the last position in the game resolutions menu that
    // normally defaults to the screen resolution, so in order for this to
    // work, make sure you have selected the last resolution.
    "resolution_width": -1,
    "resolution_height": -1,

    // Enables round shadows instead of the default octagonal ones.
    "enable_round_shadow": true,

    // Enables 3D models to be rendered in place of the sprites for pickup items.
    "enable_3d_pickups" : true,

    // Screenshot file format. Must be either "jpg" or "png".
    "screenshot_format": "jpg",

    // Enhances texture filtering at distances.
    "anisotropy_filter": 16.0,

    // Makes Lara walk to pickups and switches when nearby instead of teleporting to them.
    "walk_to_items" : false,

    // Changes the number of available save slots.
    "maximum_save_slots": 25,

    // Makes Lara revert to pistols at the start of each level (in line with TombATI behavior).
    "revert_to_pistols": false,

    // Enhances savegames so that graphic effects, waterfall mist, flame emitters, and
    // more are saved instead of disappearing on load.
    "enable_enhanced_saves": true,

    // Allows sound effects to be randomly, slightly pitched to vary the game sounds.
    "enable_pitched_sounds": true,
}
